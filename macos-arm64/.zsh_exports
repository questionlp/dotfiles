# General Exports
if [[ -d "$HOME/.local/bin" ]]; then
    export PATH="$HOME/.local/bin:$PATH"
fi

if [[ -d "$HOME/Scripts" ]]; then
    export PATH="$HOME/Scripts/:$PATH"
fi

if [[ -d "$HOME/Scripts/chdscripts" ]]; then
    export PATH="$HOME/Scripts/chdscripts/:$PATH"
fi

if [[ -d "/opt/homebrew" ]]; then
    export PATH="/opt/homebrew/bin:/opt/homebrew/sbin/:$PATH"
fi

if [[ -d "/opt/homebrew/opt/node@21" ]]; then
    export PATH="/opt/homebrew/opt/node@21/bin:$PATH"
fi

if [[ -d "/opt/homebrew/opt/openjdk/bin" ]]; then
    export PATH="/opt/homebrew/opt/openjdk/bin:/opt/homebrew/opt/openssl@3/bin:$PATH"
fi

if [[ -d "/opt/homebrew/opt/openssl@3/bin" ]]; then
    export PATH="/opt/homebrew/opt/openssl@3/bin:$PATH"
fi

export CPPFLAGS="-I/opt/homebrew/opt/openssl@3/include -I/opt/homebrew/opt/node@16/include -I/opt/homebrew/include -I/opt/homebrew/opt/openjdk/include -I/opt/homebrew/opt/ruby@3.1/include -I/opt/homebrew/opt/openjdk/include"
export HOMEBREW_NO_ANALYTICS=1
export LDFLAGS="-L/opt/homebrew/opt/openssl@3/lib -L/opt/homebrew/opt/node@21/lib -L/opt/homebrew/opt/ruby@3.1/lib"
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@3/lib/pkgconfig:/opt/homebrew/opt/mysql-client/lib/pkgconfig:/opt/homebrew/opt/ruby@3.1/lib/pkgconfig:$PKG_CONFIG_PATH"

# nvm: Node Version Manager
if [[ -d "$HOME/.nvm" ]]; then
    export NVM_DIR="$HOME/.nvm"
    [ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"
    [ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"
fi

# rbenv: Ruby Version Management
if [[ -d "$HOME/.rbenv" ]]; then
    eval "$(~/.rbenv/bin/rbenv init - zsh)"
    export PATH="/opt/homebrew/opt/ruby@3.1/bin:$PATH"
    export RUBY_CONFIGURE_OPTS="--with-openssl-dir=$(brew --prefix openssl@1.1)"
