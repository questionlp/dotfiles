# General Exports
export PATH="$HOME/.local/bin:$HOME/Scripts/:$HOME/Scripts/chdscripts/:$PATH"
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin/:$PATH"
export PATH="/opt/homebrew/opt/node@21/bin:/opt/homebrew/opt/openjdk/bin:/opt/homebrew/opt/openssl@3/bin:$PATH"

export CPPFLAGS="-I/opt/homebrew/opt/openssl@3/include -I/opt/homebrew/opt/node@16/include -I/opt/homebrew/include -I/opt/homebrew/opt/openjdk/include -I/opt/homebrew/opt/ruby@3.1/include -I/opt/homebrew/opt/openjdk@17/include"
export HOMEBREW_NO_ANALYTICS=1
export LDFLAGS="-L/opt/homebrew/opt/openssl@3/lib -L/opt/homebrew/opt/node@21/lib -L/opt/homebrew/opt/ruby@3.1/lib"
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@3/lib/pkgconfig:/opt/homebrew/opt/mysql-client/lib/pkgconfig:/opt/homebrew/opt/ruby@3.1/lib/pkgconfig:$PKG_CONFIG_PATH"

# nvm: Node Version Manager
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"

# rbenv: Ruby Version Management
eval "$(~/.rbenv/bin/rbenv init - zsh)"
export PATH="/opt/homebrew/opt/ruby@3.1/bin:$PATH"
export RUBY_CONFIGURE_OPTS="--with-openssl-dir=$(brew --prefix openssl@1.1)"
